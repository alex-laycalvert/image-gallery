<h2 class="text-center mb-4 p-4">Upload a Image</h2>
<div class="container">
    <form
        action="/upload/image/single"
        method="POST"
        enctype="multipart/form-data"
    >
        <div class="input-group mb-3">
            <input type="file" class="form-control" name="image" required />
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend" style="width: 8rem">
                <span class="input-group-text">Image Title</span>
            </div>
            <input
                type="text"
                class="form-control"
                name="title"
                placeholder="Image Title"
                required
            />
            <div class="input-group-prepend" style="width: 8rem">
                <span class="input-group-text">Public?</span>
            </div>
            <div class="form-group col-md-4">
                <select id="public" name="public" class="form-control">
                    <option selected>Choose...</option>
                    <option>No</option>
                    <option>Yes</option>
                </select>
            </div>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" style="width: 8rem"
                >Description</span
            >
            <textarea
                name="description"
                class="form-control"
                aria-label="Description"
                placeholder="Story about this photo..."
            ></textarea>
        </div>
        <div class="row">
            <div class="col text-center">
                <button
                    class="btn btn-outline-primary"
                    type="submit"
                    style="width: 100%"
                >
                    <h4>Upload Image</h4>
                </button>
            </div>
        </div>
    </form>
</div>
